{
  "name": "platform-bridge",
  "private": true,
  "version": "0.0.0",
  "dependencies": {
    "@openfort/openfort-js": "workspace:sdk",
    "ethers": "^5.8.0"
  },
  "devDependencies": {
    "parcel": "^2.15.0"
  },
  "scripts": {
    "build": "parcel build --no-cache --no-scope-hoist",
    "lint": "biome lint src",
    "check": "biome check --write src",
    "format": "biome format --write src",
    "start": "parcel"
  },
  "source": "src/index.html",
  "targets": {
    "unity": {
      "context": "browser",
      "source": "src/index.html",
      "engines": {
        "browsers": "Chrome 90"
      }
    },
    "unreal": {
      "outputFormat": "global",
      "context": "browser",
      "source": "src/bridge.ts",
      "engines": {
        "browsers": "Chrome 90"
      }
    },
    "bundle": {
      "outputFormat": "global",
      "context": "browser",
      "source": "src/index.ts",
      "engines": {
        "browsers": "Chrome 90"
      }
    }
  }
}
