{
  "name": "platform-bridge",
  "private": true,
  "version": "0.0.0",
  "dependencies": {
    "@ethersproject/abi": "^5.8.0",
    "@ethersproject/bytes": "^5.8.0",
    "@ethersproject/hash": "^5.8.0",
    "@ethersproject/providers": "^5.8.0",
    "@openfort/openfort-js": "workspace:sdk",
    "@openfort/shield-js": "^0.1.27",
    "@sentry/browser": "^9.15.0",
    "@sentry/core": "^9.15.0",
    "axios": "^1.8.2",
    "axios-retry": "^4.5.0",
    "ethers": "^5.8.0",
    "eventemitter3": "5.0.1",
    "jose": "^5.2.2"
  },
  "devDependencies": {
    "parcel": "^2.15.0"
  },
  "scripts": {
    "build": "parcel build --no-cache --no-scope-hoist",
    "lint": "biome lint src",
    "check": "biome check --write src",
    "format": "biome format --write src",
    "start": "parcel"
  },
  "source": "src/index.html",
  "targets": {
    "unity": {
      "context": "browser",
      "source": "src/index.html",
      "engines": {
        "browsers": "Chrome 90"
      }
    },
    "unreal": {
      "outputFormat": "global",
      "context": "browser",
      "source": "src/bridge.ts",
      "engines": {
        "browsers": "Chrome 90"
      }
    },
    "bundle": {
      "outputFormat": "global",
      "context": "browser",
      "source": "src/index.ts",
      "engines": {
        "browsers": "Chrome 90"
      }
    }
  }
}
