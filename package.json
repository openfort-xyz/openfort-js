{
  "name": "js-openfort-sdk",
  "version": "0.0.0",
  "author": "Openfort (https://www.openfort.io)",
  "bugs": "https://github.com/openfort-xyz/openfort-js/issues",
  "homepage": "https://github.com/openfort-xyz/openfort-js#readme",
  "repository": "github.com/openfort-xyz/openfort-js.git",
  "license": "MIT",
  "scripts": {
    "test": "wsrun --exclude-missing -e test",
    "test-e2e": "yarn workspace nextjs test",
    "typecheck": "wsrun --exclude-missing typecheck",
    "lint": "yarn workspace @openfort/openfort-js lint --no-error-on-unmatched-pattern",
    "postinstall": "husky install; ./.husky/install_gitleaks.sh",
    "stats": "yarn workspace @openfort/openfort-js stats",
    "scan:secrets": "./.husky/run_gitleaks.sh",
    "build": "yarn workspace @openfort/openfort-js build",
    
    "docs:json": "typedoc --json docs/spec.json",
    "docs:build": "typedoc",

    "nextjs:dev": "yarn workspace nextjs run dev",
    "nextjs:build": "yarn build && yarn workspace nextjs build",

    "wagmi:dev": "yarn workspace wagmi-next-app run dev",
    "wagmi:build": "yarn build && yarn workspace wagmi-next-app build"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "yarn@3.6.1",
  "private": true,
  "dependencies": {
    "tslib": "^2.6.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "crypto-browserify": "^3.12.0",
    "eslint": "^8.40.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.1",
    "events": "^3.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "stream-browserify": "^3.0.0",
    "typedoc": "^0.24.8",
    "vm-browserify": "^1.1.2",
    "wsrun": "^5.2.4"
  },
  "lint-staged": {
    "*": "yarn scan:secrets",
    "*.{js,jsx,ts,tsx}": "eslint"
  },
  "workspaces": {
    "packages": [
      "packages/**",
      "sdk",
      "examples/**",
      "test"
    ]
  },
  "sideEffects": false
}
