{
  "name": "js-openfort-sdk",
  "version": "0.0.0",
  "author": "Openfort (https://www.openfort.io)",
  "bugs": "https://github.com/openfort-xyz/openfort-js/issues",
  "homepage": "https://github.com/openfort-xyz/openfort-js#readme",
  "repository": "github.com/openfort-xyz/openfort-js.git",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "pnpm -r --filter='!examples/**' test",
    "test-e2e": "pnpm --filter nextjs test",
    "test-e2e-ui": "pnpm --filter nextjs test-ui",
    "test:unit": "pnpm --filter @openfort/openfort-js test:unit",
    "test:watch": "pnpm --filter @openfort/openfort-js test:watch",
    "preinstall": "pnpx only-allow pnpm",
    "check": "biome check",
    "check:fix": "biome check --write --unsafe",
    "check:repo": "sherif",
    "check:types": "tsc --noEmit",
    "clean": "rm -rf sdk/dist",
    "check:unused": "pnpm clean && knip",
    "postinstall": "git config --unset core.hooksPath 2>/dev/null || true && simple-git-hooks && ./.husky/install_gitleaks.sh",
    "scan:secrets": "./.husky/run_gitleaks.sh",
    "stats": "pnpm --filter @openfort/openfort-js stats",
    "dev": "pnpm --filter @openfort/openfort-js dev",
    "dev:nextjs": "pnpm --filter nextjs dev",
    "dev:firebase": "pnpm --filter firebase-next-app dev",
    "dev:solana": "pnpm --filter solana-vite dev",
    "dev:wagmi-vite": "pnpm --filter wagmi-vite dev",
    "dev:wagmi": "pnpm --filter wagmi-next-app dev",
    "build": "NODE_OPTIONS=--max-old-space-size=14366 pnpm -r --filter @openfort/openfort-js... build",
    "build:docs": "typedoc --json docs/spec.json",
    "build:nextjs": "pnpm build && pnpm --filter nextjs build",
    "build:solana": "pnpm build && pnpm --filter solana-vite build",
    "build:firebase": "pnpm build && pnpm --filter firebase-next-app build",
    "build:wagmi": "pnpm build && pnpm --filter wagmi-next-app build",
    "build:platform-bridge": "pnpm build && pnpm --filter platform-bridge build",
    "changeset": "changeset",
    "changeset:version": "pnpm install --lockfile-only && changeset version && cp sdk/CHANGELOG.md CHANGELOG.md && cd sdk && node copyVersion.cjs",
    "changeset:publish": "pnpm build && changeset publish",
    "changeset:prepublish": "pnpm build",
    "test:build": "publint ./sdk && attw --pack ./sdk"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=22.9"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.4",
    "@biomejs/biome": "^2.2.4",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.29.7",
    "@rollup/plugin-typescript": "^11.1.6",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.0",
    "events": "^3.1.0",
    "knip": "^5.70.1",
    "publint": "^0.3.12",
    "sherif": "^0.8.4",
    "simple-git-hooks": "^2.13.1",
    "stream-browserify": "^3.0.0",
    "tslib": "^2.8.1",
    "typedoc": "^0.24.8",
    "typescript": "^5.8.3",
    "vm-browserify": "^1.1.2"
  },
  "simple-git-hooks": {
    "pre-commit": "./.husky/run_gitleaks.sh && pnpm check --staged --no-errors-on-unmatched"
  },
  "workspaces": {
    "packages": [
      "packages/**",
      "sdk",
      "examples/**",
      "test"
    ]
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18.3.0",
      "@types/react-dom": "^18.3.0",
      "@vanilla-extract/sprinkles": "1.6.4",
      "micromatch@<4.0.8": ">=4.0.8",
      "cookie@<0.7.0": ">=0.7.0",
      "@metamask/sdk-communication-layer@>=0.16.0 <=0.33.0": ">=0.33.1",
      "@metamask/sdk@>=0.16.0 <=0.33.0": ">=0.33.1",
      "glob@>=10.3.7 <=11.0.3": ">=11.1.0",
      "esbuild@<=0.24.2": ">=0.25.0",
      "@remix-run/router@<=1.23.1": ">=1.23.2",
      "hono@<4.11.4": ">=4.11.4",
      "h3@<=1.15.4": ">=1.15.5",
      "lodash@>=4.0.0 <=4.17.22": ">=4.17.23"
    },
    "auditConfig": {
      "ignoreCves": [
        "GHSA-ffrw-9mx8-89p8",
        "CVE-2025-57319",
        "CVE-2025-14505"
      ]
    }
  },
  "knip": {
    "ignore": [
      ".github/**",
      ".husky/**",
      ".parcel-cache/**",
      "**/.next/**",
      "**/dist/**",
      "**/stats.html"
    ],
    "ignoreBinaries": [
      "open",
      "simple-git-hooks"
    ],
    "ignoreDependencies": [
      "@biomejs/biome",
      "@changesets/changelog-github",
      "@changesets/cli",
      "simple-git-hooks",
      "sherif",
      "@arethetypeswrong/cli",
      "knip",
      "publint",
      "typedoc",
      "tslib",
      "@rollup/plugin-typescript",
      "buffer",
      "crypto-browserify",
      "events",
      "stream-browserify",
      "vm-browserify"
    ],
    "ignoreWorkspaces": [
      "examples/**",
      "test/**",
      "packages/platform-bridge"
    ],
    "vitest": {
      "config": [
        "sdk/vitest.config.ts"
      ],
      "entry": [
        "**/*.{test,spec}.?(c|m)[jt]s?(x)"
      ]
    },
    "workspaces": {
      ".": {
        "entry": [
          "rollup.config.js!",
          "typedoc.json!"
        ]
      },
      "sdk": {
        "entry": [
          "src/index.ts!"
        ],
        "ignore": [
          "version.ts",
          "copyVersion.cjs",
          "vitest.config.ts",
          "scripts/**",
          "src/__tests__/**"
        ],
        "ignoreDependencies": [
          "axios-retry"
        ]
      },
      "packages/internal/openapi-clients": {
        "entry": [
          "src/backend-api-clients.ts!",
          "src/backend/index.ts!"
        ],
        "ignore": [
          "src/backend-openapi.json",
          "scripts/**"
        ]
      }
    }
  },
  "sideEffects": false
}
